<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <title>Search Donor</title>
    <script src="https://kit.fontawesome.com/4c18f48a30.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="searchStyle.css">
</head>
<body>
  <a class="medkit" href="/"><i class="fa-solid fa-house-chimney fa-2xl"></i></a>
    <h1>FindDonor</h1>
    <form class="row g-3" action="/search" method="POST">
      
        <div class="col-auto">
          <input type="text" name="add" class="form-control" placeholder="Enter your address" id="add" >
        </div>
        <div class="col-auto">
          <input type="text" class="form-control"name="blood" id="blood" placeholder="Required blood group(Eg.A+ve)">
        </div>
        <div class="col-auto">
            <input type="text"  class="form-control" name="radii" placeholder="Enter radius in km (Eg.30,50 etc)" id="add" >
          </div>
        <div class="col-auto">
          <button  class="btn btn-primary mb-3">Search</button>
        </div>
      </form>
      <table class="table table-info table-striped table-hover">
        <thead>
          <tr>
            <th scope="col">Distance</th>
            <th scope="col">Time</th>
            <th scope="col">Name</th>
            <th scope="col">Contact</th>
            <th scope="col">Address</th>
            
            
          </tr>
        </thead>
        <tbody>
      <% if(arr.length>0 && arr[0]!=="message"){ %>
       
          <% arr.forEach(function(element){%>
            <tr> 
            <td><%= element.farAway/1000 ;%> km</td>
          <td><%= element.duration ;%></td>
          <td><%= element.person ;%></td>
          <td><%= element.detail ;%></td>
          <td><%= element.homeAdd ;%></td>
        </tr>
        <%  }) ;%>
          <button class="btn btn-primary"><a href="/maps">Open Map</a></button>
        <% } %>
        <% if(arr[0]==="message"){ %>
          <div class="alert alert-danger">
            <h3>Sorry,No nearby donor found!!!<i class="fa-regular fa-face-frown fa-xl"></i></h3>
          </div>
       <% } %>
    </tbody>
  </table>
      </body>
</html>